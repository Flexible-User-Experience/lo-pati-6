{% extends '@SonataAdmin/standard_layout.html.twig' %}

{% block sonata_nav %}{% endblock sonata_nav %}

{% block logo %}{% endblock logo %}

{% block sonata_left_side %}{% endblock sonata_left_side %}

{% block body_attributes %}class="sonata-bc login-page"{% endblock %}

{% block sonata_wrapper %}
    <div class="login-box" style="max-width:400px;width:90%">
        <div class="center-block" style="margin-bottom:0;padding:30px;background-color:#15181D;">
            <img src="{{ asset('vectors/lo_pati_centre_art_logo.svg') }}" alt="{{ project_title }}" class="img-responsive">
        </div>
        <div class="login-box-body" style="padding:30px 20px">
            {% block sonata_user_login_form %}
                {% block sonata_user_login_error %}
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            <i class="fa fa-exclamation-triangle fa-fw"></i> {{ error.messageKey | trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                {% endblock %}
                <p class="login-box-msg" style="padding: 0 0 20px 0;text-align:left;"><strong>{{ 'back.login.welcome' | trans }}</strong></p>
                <form action="{{ path('admin_app_login') }}" method="post">
                    <div class="form-group has-feedback">
                        <label class="control-label" for="email">{{ 'form.label_email' | trans }}*</label>
                        <input id="email" type="email" class="form-control" name="email" value="{{ last_username }}" required="required">
                    </div>
                    <div class="form-group has-feedback">
                        <label class="control-label" for="password">{{ 'form.label_password' | trans }}*</label>
                        <input id="password" type="password" class="form-control" name="password" required="required">
                    </div>
                    <input type="hidden" name="_target_path" value="{{ path('sonata_admin_dashboard') }}">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary btn-flat pull-right mb-0">{{ 'form.label_login' | trans }}</button>
                        </div>
                    </div>
                </form>
            {% endblock %}
        </div>
        <div class="login-box-bottom" style="margin-top:5px">
            <span>{{ admin_tag_version }}</span>
        </div>
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom">
        <div class="container-fluid">
            <p class="navbar-text"><i class="far fa-copyright"></i> {{ 'now' | date('Y') }} <a href="{{ customer_url }}" target="_blank">{{ customer_name }}</a></p>
        </div>
    </nav>
{% endblock sonata_wrapper %}
